
@model MarotiDemo.Models.AddViewModel.EmpDataSummary

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">  
          <div class="card">
            <div class="card-header">
                <h2 class="text-center text-black">Add Employee</h2>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="empname"></label>
                            <input asp-for="empname" type="text" placeholder="Enter Name" />

                        </div>

                        <div class="form-group">
                            <label asp-for="city"></label>
                            <input asp-for="city" type="text" placeholder="Enter Name" />

                        </div>

                        <div class="form-group">
                            <label asp-for="salary"></label>
                            <input asp-for="salary" type="text" placeholder="Enter Name" />

                        </div>

                        <div class="form-group">
                           <label asp-for="deptname"></label>
                            <select asp-for="deptid" class="form-control">
                                <option value="0">--Select Department--</option>
                                @foreach (var dept in ViewBag.department)
                                {
                                    <option value="@dept.deptid">@dept.deptname</option>
                                }

                            </select>
                        </div>
                        <div>
                            <input type="submit" value="submit" class="btn btn-outline-success" />
                        </div>

                    </form>

                </div>

            </div>

        </div>

        </div>
    </div>

</div>
