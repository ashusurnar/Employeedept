 @model MarotiDemo.Models.Department

<div class="container">
    <div class="row-cols-2">
        <div class="card">
            <div class="card-header">

                <h2 class="text-center text-primary">Add Department</h2>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="deptname"></label>
                            <input asp-for="deptname" type="text" class="form-control" placeholder="Enter Name" />
                            <span asp-validation-for="deptname"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="deptcode"></label>
                            <input asp-for="deptcode" type="text" class="form-control" placeholder="Enter Code" />
                            <span asp-validation-for="deptcode"></span>
                        </div>


                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-outline-success float-end" />

                        </div>

                    </form>

                </div>
            </div>


        </div>

    </div>

</div>

